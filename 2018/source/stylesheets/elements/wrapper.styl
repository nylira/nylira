.wrapper
  max-width 1200px
  p 0 x
  margin 0 auto

body.images
  .wrapper
    max-width 1200px
    .body
      p:first-of-type
        padding-bottom: 0
        border-bottom: none

@media (min-width: 414px)
  .wrapper
    p 0 1.25*x

@media (min-width: 640px)
  .wrapper
    p 0 1.5*x

@media (min-width: 720px)
  .wrapper
    p 0 2*x
