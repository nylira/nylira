.article-body
  p, ul, ol, blockquote, h2, h3, h4, h5, h6, .figure
    a
      color txt
      text-decoration underline
      &:hover
        color link

  h1, h2
    s 1.25em
    fw 600
    lh 1.25
    mb 0.75em
    mt 1.5em

  h3
    fw bold

  code
    font-family mono

  iframe
    margin 0 auto
    display block

  img
    max-width 100%
    b 1px solid bc
    bb none

  ul, ol
    pl 2em

  ul
    lst square

  ol
    lst decimal

  .figure
    margin-bottom 1.5*x
    img
      display block

    .figcaption
      background bc
      padding 0.25*x 0.5*x
      p
        font-size 0.75*x
        color txt
        font-family sans
        margin 0
        max-width 60*x

  p, ul, ol, pre, blockquote
    m 0 0 1.5em
    max-width 60em

  > p:first-of-type
    margin-bottom x
    border-bottom 4px solid bc
    padding-bottom 2*x
    strong
      font-weight 600

  p code, h2 code, h3 code
    p 0 0.25em
    bg bg2
    font 90%/120% mono
    d inline-block

  pre
    width 100%
    max-width 80*x
    margin 0 auto
    code
      lh 1.25em

body.clients
  .article-body > p:first-of-type
    border-bottom none
    margin-bottom 0

@media (min-width: 375px)
  .article-body .figure .figcaption p
    font-size 0.8725em

@media (min-width: 414px)
  .article-body
    > p:first-of-type
      font-size 1.125*x

    .figure .figcaption p
      font-size x

@media (min-width: 640px)
  .article-body > p:first-of-type
    font-size 1.25*x

@media (min-width: 960px)
  .article-body
    h2, h3, p, .p, ul, ul.blocks
      max-width 50 * x
      margin-left auto
      margin-right auto

    pre
      width 100%
      max-width 50*x
