body.profile
  #content
    section.profile
      col 8
      pl c*4

      font-family serif
      text-smoothing()

      h2
        font 150%/1.5 sans
        color txt
        text-transform none
        mar m*2 0 m
        letter-spacing 0
        text-smoothing auto

      p
        margin 0 0 1.5em
        &:first-of-type
          font 150%/1.5 serif

      ul
        ml -320px
        clear()
        mb 1.5em
        li
          col 2
          width 159px - m*2
          margin 0 0 1px 1px
          height 159px - m*2
          padding m
          alt-font()
          &:nth-of-type(1)
            background w2
          &:nth-of-type(2)
            background w4
          &:nth-of-type(3)
            background w6
          &:nth-of-type(4)
            background w8
          &:nth-of-type(5)
            background w10
          &:nth-of-type(6)
            background w12
