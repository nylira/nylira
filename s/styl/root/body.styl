m = 13px
txt = #ccc

hue = 335
anchor = hsl(hue,100,46)

accent = #888

a
  color anchor
  text-decoration none
  &:hover
    color #fff

default-font()
  font-family sans
  font-size m
  line-height 150%
  color txt

html>body

body
  default-font()
  text-rendering optimizeLegibility
  background m40

code
  font-family mono
  font-size 90%
  background #eee
  padding 0 .2em

pre
  mar 0 0 m

h2
  color anchor
  text-transform uppercase
  font-size 75%
  letter-spacing 1px
