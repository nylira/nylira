m = 16px
txt = #ccc

hue = 335
anchor = hsl(hue,100,46)

accent = #888

a
  color anchor
  text-decoration none
  &:hover
    color #fff

default-font()
  font-family sans
  font-size m
  line-height 150%
  color txt

/*
  html>body
    overflow-y scroll
*/

body
  default-font()
  text-rendering optimizeLegibility
  background m30

code
  font-family mono
  font-size 90%
  background w7
  padding 0 .4em

pre
  mar 0 0 m

h2
  color anchor
  text-transform uppercase
  font-size 81.25%
  font-weight bold
  text-smoothing()
  letter-spacing 1px
