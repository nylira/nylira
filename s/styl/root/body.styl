m = 16px
txt = #333

hue = 335
anchor = hsl(hue,100,46)

accent = #888

a
  color anchor
  text-decoration none
  bb 1px solid anchor
  &:hover
    bb none

default-font()
  font-family serif
  font-size m
  line-height 150%
  color txt

html>body
  overflow-y scroll

body
  default-font()
  text-rendering optimizeLegibility
  background #fff
  border-top 4px solid #000

code
  font-family mono
  font-size 90%
  background #eee
  padding 0 .2em

pre
  mar 0 0 m

h2
  color anchor
  text-transform uppercase
  font-size 75%
  letter-spacing 1px
