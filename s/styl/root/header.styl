header.index
  background m50
  font-smoothing()
  box-shadow b30 0 5px 10px
  clear()

  h1 
    col(2)
    text-transform lowercase
    a
      font bold 2em/1 sans
      line-height m*3
      color w100
      bb none
      letter-spacing -1px
      &:hover
        border-bottom: 3px solid anchor
  
  nav
    col(8)
    ul
      li
        col(1)
        a
          display block
          line-height 3em
  menu
    li
      float left

body.home li.index.profile
body.articles li.index.articles
body.article li.index.articles
body.contact li.index.contact
li.index.active
  a:before
    display block
    content: '\203A'
    width m
    height m
    position absolute
    top 0
    left -1em
