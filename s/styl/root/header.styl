header.index
  cnt()
  pad 4em 0 2em
  bb 1px solid #ccc

  h1 
    col(4)
    pad 1em 0 0
    text-transform lowercase
    a
      font bold 2em/1 sans
      color #000
      bb none
      letter-spacing -1px
      &:hover
        border-bottom: 3px solid anchor
  
  nav
    col(8)
    ul
      li.menu
        float: left
        col(2)
        &.i18n
          pt 1.5em
        menu
          ul
            li.index
              a
                display block
                font-size 85%
                color #000
                bb none
                position relative
                &:hover p
                  border-bottom 1px solid txt

body.profile li.index.profile
body.articles li.index.articles
body.article li.index.articles
body.contact li.index.contact
li.index.active
  a:before
    display block
    content: '\203A'
    width m
    height m
    position absolute
    top 0
    left -1em
