body.article
  #content
    article
      col 8
      pl 320px
      mar 0 0 2em

      header
        margin 0 0 3em
        h1
          mar 0

        menu.switch
          width 240px
          float left
          ml -320px
          font-size sm

          ul
            float right
            li
              alt-font()
              float left
              &.prev:after
                content '|'
                display inline-block
                width 1em
                text-align center
        p.meta
          font-size sm

      section.body
        h2
          font 150%/1.5 sans
          color txt
          text-transform none
          mar m*2 0 m
          letter-spacing 0
          text-smoothing auto

        p, ul, ol, img, pre, blockquote
          mar 0 0 1.5em

        p
          &:first-of-type
            font 150%/1.5 sans
        ul
          list-style square

        ol
          list-style decimal

        img
          margin 0 0 1.5em

        pre
          background w5
          padding .75em 1em
          code
            background none

    p.all.articles
      width 640px
      float left
      pl 320px
