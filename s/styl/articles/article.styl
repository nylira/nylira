body.article
  #content
    article
      col 8
      pl 320px
      mar 0 0 2em

      h1
        mar 0

      menu.switch
        width 320px
        float left
        ml -336px
        font-size 85%
        ul
          float right
          li
            float left
            &.prev:after
              content '|'
              display inline-block
              width .75em
              text-align center

      h2
        color txt
        font 130%/1.5 serif
        text-transform none
        mar m*2 0 m

      p
        mar 0 0 m
        &.meta
          font-size 85%
          margin 0 0 m*2

    p.all.articles
      width 640px
      float left
      pl 320px
