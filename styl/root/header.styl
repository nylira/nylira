header.index
  cnt()
  pad 4em 0 2em
  bb 1px solid #ccc

  h1 
    col(4)
    pad 1em 0 0
    text-transform lowercase
    a
      font bold 2em/1 sans
      color #000
      text-decoration none
      letter-spacing -1px
      &:hover
        border-bottom: 3px solid anchor
  
  nav.index
    col(8)
    ul
      li
        float: left
        col(2)
        a
          color #000
          text-decoration none
          &:hover
            p
              text-decoration underline
          p
            font-size 85%
