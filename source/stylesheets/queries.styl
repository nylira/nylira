@media (min-width: 375px)
  #container .body.text .figure .figcaption p
    s 0.8725em

@media (min-width: 414px)
  #container > .wrapper > .body > p:first-of-type
      s 1.125em

  #container .body.text .figure .figcaption p
    s 1em

@media (min-width: 640px)
  #container > .wrapper > .body > p:first-of-type
    s 1.25em

@media (min-width: 768px)
  #footer
    clearfix()
    ta left
    p.copyright, ul
      float left
    p.copyright
      w 33.3333%
    ul
      w 66.6666%

  // add more padding to the homepage header
  body.home
    #home-header
      mb 3em

  // increase padding everywhere to 3em
  body.about
    #container
      mb 0.5em + 1em

  body.clients
  body.expertise
  body.contact
    #container
      mb 1em + 1em

  #container > .wrapper > .footer
    mb 3em

@media (min-width: 996px)
  #container
    .wrapper > .header
    .wrapper > .footer
      max-width 50 * x
      margin-left auto
      margin-right auto

    .body, .body.text
      h2, h3, p, .p, ul, ul.blocks
        max-width 50 * x
        margin-left auto
        margin-right auto

  body.clients
    #container .body ul.blocks
      pl 320px
      m 0 auto
      li
        ml 320px
        ml 0
        mr 0

        .block, a.block
          p 0
          clearfix()

          .thumb
            d block
            b 1px solid #ddd
            br none
          .title
            float left
            lh 84px
            m 0
            pl 1em
          .sub
            lh 84px
            float right
            pr 1em

@media (min-width: 1200px)
  #container .header h1
    s 3em

  #container .body ul.blocks li .block .title
    s 1.5em
