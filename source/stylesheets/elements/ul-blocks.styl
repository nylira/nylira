ul.blocks
  li
    m 0 0 1em
    .block, a.block
      d block
      p 0.75em 1.25em
      b 1px solid bc
      relative()

      .title
        font-size 1.25em
        ff sans
        c txt

      .sub
        c anchor
        font-size 0.75em

      .go
        background hsla(0,0,100%,.1)
        color #ccc
        text-transform uppercase
        font-size 0.66em
        letter-spacing 1px
        line-height 2em
        padding 0 0.33em
        margin-left 0.5em

      .date, .go
        display inline-block

      .date
        c #666

      .thumb
        absolute()
        top -1px
        left -321px
        w 320px
        bg bg3
        h 86px
        overflow hidden
        display none
        img
          w 320px
          h 86px
          transition ease 0.1s

    a.block
      &:hover
        border-color link
        .go
          bg link
          color #fff

        .thumb
          img
            transform scale(1.25)
