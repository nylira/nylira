#home-header
  margin-bottom 2*x
  w 100%

  h1
    font-size 2*x
    margin 0 0 x
    color txt
    font-weight 200
    line-height 1.25
  p
    font-size 1.25*x
    max-width 60*x

@media (min-width: 720px)
  #home-header
    h1
      font-size 2.5*x

@media (min-width: 960px)
  #home-header
    padding 2*x 0
    h1
      font-size 3*x
