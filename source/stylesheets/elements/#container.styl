#container
  clearfix()

  .header
    mb 1.875em
    ta center

    p.date
      m 0
      ff sans
      span.label
        d none

    h1
      font 2em/1.25 sans
      ls -1px
      c link

#container
  .body
    pb 1.5em

  .body.text

    p, ul, ol, blockquote, h2, h3, h4, h5, h6, .figure
      a
        td underline

    h3, h3
      vertical-align top

    h2
      font 1.5em/1.25 sans
      mb 0.75em
      mt 1.5em
      c m150
      c link

    h3
      fw bold

    code
      font-family mono

    img
      max-width 100%
      b 1px solid bc
      bb none

    .figure
      mb 3em
      img
        d block
      .figcaption
        bg bc
        p .5em 0.75em
        p
          c txt
          m 0
    .aside
      w 240px
      fl()
      ml -320px
      d none
      h3, .content
        bg m240
      h3
        h x*1.25 + x*2
        lh 1.25em
        p x
        mb 1px
      .content
        s 85%
        p x*0.75 x
        ul
          mb 0

    p, ul, ol, pre, blockquote
      m 0 0 1.5em
      max-width 60em

    p code, h2 code, h3 code
      p 0 0.25em
      bg bg3
      f 90%/120% mono
      d inline-block

    pre
      b 1px solid bc
      bg bg3
      padding 1em
      code
        lh 1.25em

  .footer
    mb 3em
    clearfix()
    p.meta
      font-size 0.75em
      line-height 3em
