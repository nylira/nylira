.category
  mb 3em

  .category-name
    f 1em/2 sans
    tt uppercase
    ls 1px
    bg #eee
    bt 1px solid #ddd
    p 0 0.66em
    m 0


  ul
    li
      p 0.25em 0
      bt 1px solid #ddd

      a
        d block
        c txt
        clearfix()
        f 1.5em/2 sans
        p 0 .33em

        &:hover
          c link

        .title
          d block

        .date
          c light
          f .75em/2.5 serif

