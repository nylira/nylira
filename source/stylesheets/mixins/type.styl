@font-face
  font-family DIN
  src url('../fonts/dinpro-regular-webfont.eot')
  src url('../fonts/dinpro-regular-webfont.eot?iefix') format('eot'), url('../fonts/dinpro-regular-webfont.woff') format('woff'), url('../fonts/dinpro-regular-webfont.ttf')  format('truetype'), url('../fonts/dinpro-regular-webfont.svg#svgFontName') format('svg')

@font-face
  font-family DIN
  font-weight bold
  src url('../fonts/dinpro-bold-webfont.eot')
  src url('../fonts/dinpro-bold-webfont.eot?iefix') format('eot'), url('../fonts/dinpro-bold-webfont.woff') format('woff'), url('../fonts/dinpro-bold-webfont.ttf')  format('truetype'), url('../fonts/dinpro-bold-webfont.svg#svgFontName') format('svg')

x = 16px
sm = 13px

df()
  s x
  lh 1.5
  ff sans
  c txt

anchor()
  c link
  td none
  &:hover, &:focus
    c hover

a
  anchor()

em
  font-style italic

strong
  font-weight bold
