extends layouts/base

block title
  = meta.title

block container

  .header
    p.date
      span.project= moment(meta.date).format("YYYY-MM-DD")
      span.article= 'Last updated ' + moment(meta.date).format("YYYY-MM-DD")
    h1.title!= typogr.typogrify(meta.title)

  .body
    != content

  .footer
    p.meta= 'Last edited on ' + moment(meta.date).format("YYYY-MM-DD") + '.'
