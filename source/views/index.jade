extends layouts/base

block title
  | Web Interface Design by Peng Zhong - Nylira

block container

  .home-header
    .cell
      h1 Interface design for <a href="./about/">developers</a>.

  .section
    .section-header
      h2 Recent Projects
    ul.blocks.projects
      - for project in projects
        li: a.block(href='./' + project.slug + '/')
          .title!= project.meta.title
          .date= moment(project.meta.date).format("YYYY-MM-DD")

  .section
    .section-header
      h2 Recent Articles
    ul.blocks.articles
      - for article in articles
        li: a.block(href='./' + article.slug + '/')
          .title!= article.meta.title
          .date= moment(article.meta.date).format("YYYY-MM-DD")

  .section
    .section-header
      h2 Contact
    ul.blocks
      li: a.block(href='mailto:peng@nylira.com')
        .title peng@nylira.com
        .sub Email
      li: .block
        .title 0x5619950A
        .sub GPG Key
      li: a.block(href='https://github.com/nylira')
        .sub https://github.com/nylira
        .title GitHub
