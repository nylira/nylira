extends layouts/base

block title
  | Web interface design by Peng Zhong

block container

  #home-header
    .cell
      h1 
        a(href=depth+'profile') Interface design
        |  for the&nbsp;web.

  .section
    .section-header
      h2
        | Recent 
        a(href=depth+'projects') Projects
    ul.blocks.projects
      - for project in projects
        li: a.block(href=depth + project.slug + '/')
          .title!= project.meta.title
          .date= moment(project.meta.date).format("YYYY-MM-DD")
          .sub View Project

  .section
    .section-header
      h2
        | Recent 
        a(href=depth+'articles') Articles
    ul.blocks.articles
      - for article in articles
        li: a.block(href=depth + article.slug + '/')
          .title!= article.meta.title
          .date= moment(article.meta.date).format("YYYY-MM-DD")
          .sub Read More

  .section
    .section-header
      h2
        | Get in 
        a(href=depth+'contact') Touch
    ul.blocks
      li: a.block(href='mailto:peng@nylira.com')
        .title peng@nylira.com
        .sub Email
      li: .block
        .title 0x5619950A
        .sub
          | PGP Key 
          em: a(href='http://prism-break.org/en/all/#email-encryption') What is PGP?
      li: a.block(href='https://github.com/nylira')
        .title github.com/nylira
        .sub GitHub
